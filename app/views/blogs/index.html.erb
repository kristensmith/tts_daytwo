<h1>Listing blogs</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Year founded</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each_with_index do |blog, i| %>
    <br>
    <h2> using modulus</h2>
      
      <% if i % 2 == 0 %>
      
      <tr class="even">

        <td><%= blog.name %></td>
        <td><%= blog.description %></td>
        <td><%= blog.year_founded %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      
      <%else%>

      <tr>
        <td><%= blog.name %></td>
        <td><%= blog.description %></td>
        <td><%= blog.year_founded %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
